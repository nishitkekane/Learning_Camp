<% layout('layouts/boilerplate') %>

<div class="container mx-auto p-4">
    <h2 class="text-2xl font-bold mb-4 text-center">Add New Campground</h2>
    <form action="/campgrounds" method="POST" class="max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" enctype="multipart/form-data">
        <div class="mb-4">
            <label for="title" class="block text-gray-700 text-sm font-bold mb-2">Campground Title:</label>
            <input type="text" id="title" name="campground[title]" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-black focus:ring-1 focus:ring-black">
        </div>
        <div class="mb-4">
            <label for="location" class="block text-gray-700 text-sm font-bold mb-2">Location:</label>
            <input type="text" id="location" name="campground[location]" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-black focus:ring-1 focus:ring-black">
        </div>
        <div class="mb-4">
            <label for="description" class="block text-gray-700 text-sm font-bold mb-2">Description:</label>
            <textarea id="description" name="campground[description]" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-black focus:ring-1 focus:ring-black"></textarea>
        </div>

        <!-- File input with Tailwind CSS styles -->
        <label class="file-label mb-4">
            <span class="file-text">Choose image(s)...</span>
            <span class="file-button ml-2">Browse</span>
            <input type="file" id="image" name="campground[image]" multiple>
        </label>

        <!-- Price input with Tailwind CSS styles and additional margin -->
        <div class="mb-8 w-64">
            <label for="price" class="block text-gray-700 text-sm font-bold mb-2">Price:</label>
            <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">$</span>
                <input type="number" id="price" name="campground[price]" required class="shadow appearance-none border rounded w-full py-2 pl-8 pr-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-black focus:ring-1 focus:ring-black">
            </div>
        </div>
        <div class="flex items-center justify-center">
            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Submit
            </button>
        </div>
    </form>
</div>
