<% layout('layouts/boilerplate') %>

<div class="flex-grow container mx-auto p-4">
    <h2 class="text-2xl font-bold mb-4 text-center text-gray-800">Campgrounds</h2>
    <div class="flex flex-col space-y-4">
        <% for (let c of campgrounds) { %>
        <div class="flex flex-row bg-white shadow-md rounded-lg overflow-hidden">
            <img src="https://images.pexels.com/photos/1687845/pexels-photo-1687845.jpeg?cs=srgb&dl=pexels-xue-guangjian-815005-1687845.jpg&fm=jpg" alt="Camp Image" class="w-1/3 object-cover">
            <div class="p-4 flex flex-col justify-between">
                <div>
                    <h3 class="text-xl font-bold text-gray-800"><a href="/campgrounds/<%= c._id %>" class="text-blue-500 hover:underline"><%= c.title %></a></h3>
                    <p class="text-gray-600"><%= c.description %></p>
                </div>
            </div>
        </div>
        <% } %>
    </div>
    <a href="/campgrounds/new" class="text-blue-500 hover:underline mt-4 inline-block">Create new camp</a>
</div>
